];

const shuffleArray = array => {
  for (let i = array.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    const temp = array[i];
    array[i] = array[j];
    array[j] = temp;
  }

	return array
}

const fanarts = shuffleArray(conf.map((fanart) => {
	fanart.name = fanart.author.match('([^\/]+$)')[0]

	return fanart;
}))
